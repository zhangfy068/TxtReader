<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.duowan.mobile.netroid.image.NetworkImageView
            android:id="@+id/imvBookCover"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="@drawable/book_cover_frame"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <com.vincestyling.ixiaoshuo.ui.ComplexBookNameView
                android:id="@+id/txvBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp">

                <TextView
                    style="@style/finder_book_list_item_capacity"/>

                <TextView
                    style="@style/finder_book_list_item_tips"/>

            </LinearLayout>

            <TextView
                android:maxLines="2"
                android:lineSpacingExtra="3dp"
                style="@style/finder_book_list_item_summary"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        style="@style/finder_book_list_item_divider"/>

</LinearLayout>