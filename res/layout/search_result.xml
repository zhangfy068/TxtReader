<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lotContent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        style="@style/top_titlebar">

        <TextView
            android:id="@+id/txvTitle"
            style="@style/top_titlebar_txv"/>

        <Button
            style="@style/top_titlebar_btn_close"/>

    </FrameLayout>

    <TextView
        android:id="@+id/txvSearchResultInfo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textSize="15sp"
        android:textColor="#d88104"
        android:visibility="gone"
        android:background="@drawable/search_result_headline_bg"/>

</LinearLayout>