<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4efe6">

    <com.vincestyling.ixiaoshuo.ui.NonSwipeableViewPager
        android:id="@+id/mainContentPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.vincestyling.ixiaoshuo.ui.MainMenuGridView
        android:id="@+id/mainMenuView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/menu_bg_layer"/>

</LinearLayout>