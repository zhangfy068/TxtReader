<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/without_book_container">

    <LinearLayout
        style="@style/without_book_main_container"
        android:layout_height="160dp">

        <TextView
            style="@style/without_book_top_tip"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="8dp">

            <LinearLayout
                style="@style/without_book_second_container"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/lotGoScan"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="top|left"
                    android:layout_marginRight="8dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="8dp"
                    android:gravity="center"
                    android:background="@drawable/book_shelf_without_book_local_menu">

                    <ImageView
                        style="@style/without_book_menu_icon"
                        android:src="@drawable/book_shelf_without_book_local_add_btn"/>

                    <LinearLayout
                        style="@style/without_book_menu_tips_container">

                        <TextView
                            style="@style/without_book_menu_primary_txt"
                            android:text="@string/without_book_local_tip1"/>

                        <TextView
                            android:text="@string/without_book_local_tip2"
                            style="@style/without_book_menu_secondary_txt"/>

                    </LinearLayout>

                    <ImageView
                        style="@style/without_book_menu_tips_arrow"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/book_shelf_without_book_1item_wrap_line"/>

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>