<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="finder_listview_header_container_height">64dp</dimen>
    <dimen name="finder_listview_header_content_height">38dp</dimen>

    <string name="pull_to_load_prev_page">下拉加载上一页</string>
    <string name="pull_to_load_next_page">上拉加载下一页</string>
    <string name="current_page_note">当前第%d页</string>
    <string name="loading_page_note">正在加载第%d页……</string>
    <string name="finder_booklist_hottest">%d人看过</string>

    <dimen name="finder_booklist_bookname_flag">10sp</dimen>
    <color name="finder_booklist_bookname_flag">#ffffff</color>
    <dimen name="finder_booklist_bookname_flag_padding">1dp</dimen>
    <dimen name="finder_booklist_bookname_flag_marginleft">2dp</dimen>
    <dimen name="finder_booklist_bookname_flag_split_padding">1dp</dimen>

    <string name="finder_tab_type_simply">文本列表</string>
    <string name="finder_tab_type_amply">图文列表</string>

    <item type="id" name="txvBookCapacity"/>
    <style name="finder_book_list_item_capacity">
        <item name="android:id">@id/txvBookCapacity</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#bdbdbc</item>
        <item name="android:textSize">11sp</item>
    </style>

    <item type="id" name="txvBookTips"/>
    <style name="finder_book_list_item_tips">
        <item name="android:id">@id/txvBookTips</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/book_tips_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#e9a002</item>
        <item name="android:textSize">12sp</item>
    </style>

    <item type="id" name="txvBookSummary"/>
    <style name="finder_book_list_item_summary">
        <item name="android:id">@id/txvBookSummary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">15sp</item>
    </style>

    <item type="id" name="lotDivider"/>
    <style name="finder_book_list_item_divider">
        <item name="android:id">@id/lotDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/finder_booklist_divider_layer</item>
    </style>

    <string name="finder_categories_amount">共%d部</string>

    <color name="finder_booklist_bg">#fffbf7</color>
    <color name="finder_booklist_bg_pressed">#fff4e5</color>
    <color name="finder_category_list_divier">#faf1e7</color>
</resources>