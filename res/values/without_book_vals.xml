<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="without_text_book_tips">您的书架上还没有任何小说</string>
    <string name="without_voice_book_tips">您的书架上还没有有声读物</string>
    <string name="without_local_book_tips">您的本地书架还没有任何小说</string>

    <string name="without_book_finder_tip1">去发现一本好书</string>
    <string name="without_book_finder_tip2">最热门网络小说任您品读…</string>
    <string name="without_book_finder_tip3">最好听的有声读物任您收听…</string>

    <string name="without_book_detector_tip1">开启小说雷达检索</string>
    <string name="without_book_detector_tip2">雷达精准探测，扫描有惊喜…</string>

    <string name="without_book_local_tip1">立刻添加本地文件</string>
    <string name="without_book_local_tip2">添加本地书籍，畅享更多精彩…</string>
    <string name="without_book_local_unconstruct">本地书籍功能未实现！</string>

    <dimen name="without_book_container_bg_corner_radius">5dp</dimen>
    <color name="without_book_container_bg_border">#c2b29d</color>
    <dimen name="without_book_container_bg_border">1dp</dimen>

    <style name="without_book_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <item type="id" name="lotWithoutBookBanner"/>
    <style name="without_book_main_container">
        <item name="android:id">@id/lotWithoutBookBanner</item>
        <item name="android:layout_width">312dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <item type="id" name="txvTopTip"/>
    <style name="without_book_top_tip">
        <item name="android:id">@id/txvTopTip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#685641</item>
    </style>

    <style name="without_book_second_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@drawable/book_shelf_without_book_frame</item>
    </style>

    <style name="without_book_menu_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="without_book_menu_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="without_book_menu_tips_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>

    <style name="without_book_menu_tips_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="without_book_menu_primary_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#cd9c57</item>
    </style>

    <style name="without_book_menu_secondary_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#b09a7b</item>
    </style>
</resources>