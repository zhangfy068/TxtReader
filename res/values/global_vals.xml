<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">爱小说阅读器</string>
    <string name="loading_tip_msg">正在努力地加载中……</string>
    <string name="without_data">抱歉，暂无更新数据！</string>
    <string name="common_dialog_title">提示</string>

    <string name="exit_app_tip">再按一次退出程序</string>
    <string name="unimplement_feature">功能未实现</string>

    <color name="complex_bookname_txt">#4d4d4d</color>
    <dimen name="complex_bookname_txt">19sp</dimen>

    <string name="cancel">取消</string>
    <string name="ok">确定</string>

    <item name="btnClose" type="id"/>

    <string name="book_status_tip_newly">新</string>
    <string name="book_status_tip_continue">连</string>
    <string name="book_status_tip_finished">完</string>
    <string name="book_status_tip_both_type">双</string>
    <string name="book_status_tip_text_book">字</string>
    <string name="book_status_tip_voice_book">声</string>

    <declare-styleable name="GridView">
        <attr name="columnCount" format="integer" />
    </declare-styleable>

    <style name="top_titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/title_bg_layer</item>
    </style>

    <style name="top_titlebar_txv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="top_titlebar_btn_close">
        <item name="android:id">@id/btnClose</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/reading_board_arrow</item>
    </style>

    <style name="AppsTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/theme_windows_bg</item>
        <item name="android:colorBackground">@color/theme_windows_bg</item>
    </style>

    <color name="theme_windows_bg">#ffffff</color>
</resources>